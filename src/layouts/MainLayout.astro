---
import { getWPPages } from '../lib/wp-client';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = 'Christine Ortner', description, image } = Astro.props;
const pages = await getWPPages();
---
<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <SEO title={title} description={description} image={image} />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body>
  <nav class="navbar">
    <a href="/">Home</a>
    {pages.map((page) => (
      <a href={`/${page.slug}`}>{page.title.rendered}</a>
    ))}
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <p>&copy; 2025 Christine Ortner | <a href="/impressum">Impressum</a></p>
  </footer>
</body>
</html>