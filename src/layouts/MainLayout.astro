---
import { getPages } from '../lib/wordpress';
import SEO from '../components/SEO.astro';
import '../styles/global.css';
import type { WPPage } from '../types/wordpress';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = 'Christine Ortner', description, image } = Astro.props;
let pages: WPPage[] = [];
try {
  pages = await getPages();
} catch (error) {
  console.error('Error fetching pages for navigation:', error);
  pages = [];
}
---
<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <SEO title={title} description={description} image={image} />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body>
  <nav class="navbar">
    <a href="/">Home</a>
    {pages.map((page) => (
      <a href={`/${page.slug}`}>{page.title.rendered}</a>
    ))}
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer>
    <p>&copy; 2025 Christine Ortner | <a href="/impressum">Impressum</a></p>
  </footer>
</body>
</html>
