---
import Layout from '../../layouts/MainLayout.astro';
import { getPages, getFeaturedImageUrl, getExcerpt } from '../../lib/wordpress';
import type { WPPage } from '../../types/wordpress';

export async function getStaticPaths() {
  try {
    const pages = await getPages();
    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page },
    }));
  } catch (error) {
    console.error('Error fetching pages for static paths:', error);
    return [];
  }
}

interface Props {
  page: WPPage;
}

const { page } = Astro.props;
const featuredImage = getFeaturedImageUrl(page);
const description = getExcerpt(page, 160);
---

<Layout title={page.title.rendered} description={description} image={featuredImage}>
  <article class="page-article">
    <header class="page-header">
      <h1 set:html={page.title.rendered} />
      <div class="page-meta">
        <time datetime={page.modified}>
          Last updated: {new Date(page.modified).toLocaleDateString('de-AT', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>
    </header>

    {featuredImage && (
      <img
        src={featuredImage}
        alt={page.title.rendered}
        class="featured-image"
      />
    )}

    <div class="page-content" set:html={page.content.rendered} />
  </article>
</Layout>

<style>
  .page-article {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  h1 {
    font-size: 2.5rem;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .page-meta {
    color: #6b7280;
    font-size: 0.9rem;
  }

  .featured-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .page-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .page-content h2 {
    font-size: 1.8rem;
    color: var(--text);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .page-content h3 {
    font-size: 1.4rem;
    color: var(--text);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .page-content p {
    margin-bottom: 1rem;
  }

  .page-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .page-content a {
    color: var(--primary);
    text-decoration: none;
  }

  .page-content a:hover {
    text-decoration: underline;
  }

  .page-content ul,
  .page-content ol {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  .page-content li {
    margin-bottom: 0.5rem;
  }

  .page-content blockquote {
    border-left: 4px solid var(--primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: #555;
    font-style: italic;
  }

  .page-content pre {
    background: #f4f4f4;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .page-content code {
    background: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  @media (max-width: 768px) {
    .page-article {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .page-content {
      font-size: 1rem;
    }
  }
</style>
