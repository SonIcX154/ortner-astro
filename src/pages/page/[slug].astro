---
import { getPages, getPageBySlug, getFeaturedImageUrl } from '../../lib/wordpress';
import type { WPPage } from '../../types/wordpress';

export async function getStaticPaths() {
  try {
    const pages = await getPages();
    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page },
    }));
  } catch (error) {
    console.error('Error fetching pages for static paths:', error);
    return [];
  }
}

interface Props {
  page: WPPage;
}

const { page } = Astro.props;
const featuredImage = getFeaturedImageUrl(page);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{page.title.rendered} - Christine Ortner</title>
    <meta name="description" content={page.excerpt.rendered.replace(/<[^>]*>/g, '').substring(0, 160)} />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #f5f5f5;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
      }

      nav {
        margin-bottom: 2rem;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #3498db;
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
      }

      .back-link:hover {
        color: #2980b9;
      }

      article {
        background: white;
        border-radius: 8px;
        padding: 3rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .page-header {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid #e0e0e0;
      }

      h1 {
        font-size: 2.5rem;
        color: #2c3e50;
        margin-bottom: 1rem;
      }

      .page-meta {
        color: #7f8c8d;
        font-size: 0.9rem;
      }

      .featured-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 2rem;
      }

      .page-content {
        font-size: 1.1rem;
        line-height: 1.8;
      }

      .page-content h2 {
        font-size: 1.8rem;
        color: #2c3e50;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      .page-content h3 {
        font-size: 1.4rem;
        color: #34495e;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
      }

      .page-content p {
        margin-bottom: 1rem;
      }

      .page-content img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
      }

      .page-content a {
        color: #3498db;
        text-decoration: none;
      }

      .page-content a:hover {
        text-decoration: underline;
      }

      .page-content ul,
      .page-content ol {
        margin-left: 2rem;
        margin-bottom: 1rem;
      }

      .page-content li {
        margin-bottom: 0.5rem;
      }

      .page-content blockquote {
        border-left: 4px solid #3498db;
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        color: #555;
        font-style: italic;
      }

      .page-content pre {
        background: #f4f4f4;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin: 1rem 0;
      }

      .page-content code {
        background: #f4f4f4;
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: 'Courier New', monospace;
        font-size: 0.9em;
      }

      footer {
        text-align: center;
        margin-top: 4rem;
        padding: 2rem;
        color: #7f8c8d;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        article {
          padding: 2rem 1.5rem;
        }

        h1 {
          font-size: 2rem;
        }

        .page-content {
          font-size: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav>
        <a href="/" class="back-link">
          <span>‚Üê</span>
          <span>Back to Home</span>
        </a>
      </nav>

      <article>
        <header class="page-header">
          <h1 set:html={page.title.rendered} />
          <div class="page-meta">
            <time datetime={page.modified}>
              Last updated: {new Date(page.modified).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </header>

        {featuredImage && (
          <img 
            src={featuredImage} 
            alt={page.title.rendered}
            class="featured-image"
          />
        )}

        <div class="page-content" set:html={page.content.rendered} />
      </article>

      <footer>
        <p>Content managed via WordPress CMS</p>
      </footer>
    </div>
  </body>
</html>
