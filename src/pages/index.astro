---
import Layout from '../layouts/MainLayout.astro';
import { getWPPage } from '../lib/wp-client';

const home = await getWPPage('home') || [{ title: { rendered: 'Willkommen' }, content: { rendered: '<h1>Christine Ortner</h1><p>Die Inhalte kommen von WordPress...</p>' } }];
---
<Layout title={home[0].title.rendered}>
  <section class="hero">
    <h1>{home[0].title.rendered}</h1>
    <div set:html={home[0].content.rendered} />
  </section>
</Layout>

<style>
  .hero {
    padding: 4rem 2rem;
    text-align: center;
  }
</style>